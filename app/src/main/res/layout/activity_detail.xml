<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/ivDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/twohundredfifty_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        />

    <ImageView
        android:id="@+id/ivBackArrowDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginLeft="@dimen/fourteen_dp"

        android:src="@drawable/ic_keyboard_left_arrow_button"
        />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivDetail"
        tools:text="Salada com molho Gengibre "
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginLeft="24dp"

        />

    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDetail"
        android:layout_marginTop="@dimen/seventyeight_dp"
        android:layout_marginLeft="@dimen/eleven_dp"
        android:textSize="@dimen/twentyfour_sp"
        tools:text="Alguma coisa qui"
        android:textColor="@color/button_secondary_color"

        />

</androidx.constraintlayout.widget.ConstraintLayout>